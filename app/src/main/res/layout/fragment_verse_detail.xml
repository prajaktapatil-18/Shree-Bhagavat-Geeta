<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".VerseDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toLeftOf="@id/tv_bhavagt_geeta"
            android:src="@drawable/lotus" />

        <TextView
            android:id="@+id/tv_bhavagt_geeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Shree Bhagavat Geeta"
            android:textColor="#ff0000"
            android:textSize="27sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_bhavagt_geeta"
            android:src="@drawable/lotus" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/tv_bhavagt_geeta"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:background="@color/red" />


        <TextView
            android:id="@+id/versecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bhavagt_geeta"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"

            android:text="|| 1.6 ||"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/view"
            android:layout_alignParentEnd="true"
            android:layout_margin="7dp"
            android:src="@drawable/like"/>


        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_below="@id/versecount"
            android:alpha="0.3"
            android:src="@drawable/krishny"/>

        <TextView
            android:id="@+id/tv_shlok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/versecount"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:maxLines="6"
            android:layout_marginStart="20dp"
            android:text="Arjun visada yoga"
            android:textColor="@color/red"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/verse_des_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_shlok"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/verse_detail"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/verse_des_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verse_des_1"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="13dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="@string/verse_para"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translation"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="26sp"
            android:layout_below="@id/verse_des_2"
            android:layout_marginStart="10dp"/>



        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/tv_translation">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:layout_height="match_parent">
            
            <TextView
                android:id="@+id/tv_author_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:padding="7dp"/>
            
            
            <TextView
                android:id="@+id/tv_trans_des1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="4"
                android:layout_margin="10dp"
                android:padding="4dp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/backarrow"
            android:padding="20dp"
            android:visibility="gone"
            android:background="@drawable/btn_bg_back_next"
            android:layout_below="@id/tv_translation"
            android:layout_marginTop="130dp"
            android:elevation="10dp"
            android:layout_marginStart="40dp"/>


        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/nextarrow"
            android:padding="20dp"
            android:background="@drawable/btn_bg_back_next"
            android:layout_below="@id/tv_translation"
            android:layout_alignParentEnd="true"
       android:layout_marginEnd="40dp"
            android:layout_marginTop="130dp"
            android:elevation="10dp"/>


        <TextView
            android:id="@+id/tv_commentary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commentary"
            android:textStyle="bold"
            android:textSize="26sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/cardview"/>



        <androidx.cardview.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@id/tv_commentary">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/card_bg"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_commentary_author_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:padding="7dp"/>


                <TextView
                    android:id="@+id/tv_commentary_des1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:text ="shree krishny rahde radhe radha rafdha radha radha radha radsha radha radha radha radhar radha radha radha radha radha rahd radha radha radha radh aradha radha radha radha radha rahd arajd a"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:padding="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read More ..."
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:textColor="#0000ff"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/btn_back_comm"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/backarrow"
            android:padding="20dp"
            android:visibility="gone"
            android:background="@drawable/btn_bg_back_next"
            android:layout_below="@id/tv_commentary"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="30dp"
            android:elevation="10dp"
            android:layout_marginStart="40dp"/>


        <ImageView
            android:id="@+id/btn_next_comm"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/nextarrow"
            android:padding="20dp"
            android:visibility="visible"
            android:background="@drawable/btn_bg_back_next"
            android:layout_below="@id/tv_commentary"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="110dp"
            android:elevation="10dp"/>


    </RelativeLayout>

</ScrollView>





